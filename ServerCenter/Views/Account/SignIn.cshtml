@model SignIn
@{
    ViewData["Title"] = "SignIn";
}

<h1>SignIn</h1>
<span style="color:red;">@ViewData["Message"]</span>
<div class="row">
    <div class="col col-md-6">
        <section>
            <form asp-controller="Account" asp-action="SignIn" method="post">
                <div class="form-group">
                    <label class="col-md-4 control-label">用户名</label>
                    <div class="col-md-8">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">密码</label>
                    <div class="col-md-8">
                        <input asp-for="Password" class="form-control" type="password" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">再次输入</label>
                    <div class="col-md-8">
                        <input asp-for="ComfirmPassword" class="form-control" type="password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <button type="submit" class="btn btn-primary">注册</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>